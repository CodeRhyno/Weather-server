<%= simple_form_for @device, meethod: :put, url: device_path do |f| %>
    <%= f.input :user_id, collection: @users, required: true %>
    <%= f.input :model_number, collection: [345, 346], required: true %>
    <%= f.input :is_alive, required: true %>
    <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>

<% if !@device.token_is_valid %>
    <%= link_to "Enable", enable_device_path(@device.id), method: :post %>
<% else %>
    <%= link_to "Disable", disable_device_path(@device.id), method: :post %>
<% end %>

<%= link_to "View Data history", device_path(@device) %>