<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Device Mode</th>
      <th scope="col">Registration Number</th>
      <th scope="col">Device Alive</th>
      <th scope="col">Device Assigned At</th>
      <th scope="col">Auth Token Valid</th>
    </tr>
  </thead>
  <tbody>
    <% @devices.each do |d| %>
        <tr>
            <td><%= d.id %></td>
            <td><%= d.model_number %></td>
            <% if d.is_alive %>
                <td><%= link_to d.reg_number, user_disable_device_path(d.id) %></td>
            <% else %>
                <td><%= link_to d.reg_number, user_enable_device_path(d.id) %></td>
            <% end %>
            <td><%= d.is_alive %></td>
            <td><%= d.updated_at %></td>
            <td><%= d.token_is_valid %></td>
        </tr>
    <% end %>
  </tbody>
</table>